---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, COMPANY, GOALS } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`About - ${SITE_TITLE}`} description="Learn about Neuroship's mission, vision, and team" />
		<style>
			/* Page Header */
			.page-header {
				padding: 10rem 2rem 6rem;
				text-align: center;
				position: relative;
				overflow: hidden;
			}

			.page-header::before {
				content: '';
				position: absolute;
				top: 0;
				left: 50%;
				transform: translateX(-50%);
				width: 150%;
				height: 100%;
				background: 
					radial-gradient(ellipse at 50% 0%, rgba(139, 92, 246, 0.15) 0%, transparent 50%),
					radial-gradient(ellipse at 30% 80%, rgba(6, 182, 212, 0.1) 0%, transparent 40%);
				pointer-events: none;
				z-index: -1;
			}

			.page-header h1 {
				font-size: clamp(2.5rem, 6vw, 4rem);
				margin-bottom: 1.5rem;
			}

			.page-header .lead {
				max-width: 700px;
				margin: 0 auto;
				font-size: 1.2rem;
				color: var(--text-secondary);
			}

			/* Section Styles */
			.about-section {
				padding: 6rem 2rem;
				max-width: 1200px;
				margin: 0 auto;
			}

			.section-divider {
				height: 1px;
				background: linear-gradient(90deg, transparent, var(--border-color), transparent);
				margin: 0;
			}

			/* Story Section */
			.story-section {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 4rem;
				align-items: center;
			}

			.story-content h2 {
				margin-bottom: 1.5rem;
			}

			.story-content p {
				margin-bottom: 1.5rem;
				line-height: 1.8;
			}

			.story-visual {
				position: relative;
			}

			.story-card {
				background: var(--bg-card);
				border: 1px solid var(--border-color);
				border-radius: 24px;
				padding: 3rem;
				position: relative;
				overflow: hidden;
			}

			.story-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				height: 3px;
				background: var(--gradient-primary);
			}

			.stats-grid {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 2rem;
			}

			.stat-item {
				text-align: center;
			}

			.stat-number {
				font-size: 2.5rem;
				font-weight: 800;
				background: var(--gradient-primary);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
				margin-bottom: 0.5rem;
			}

			.stat-label {
				color: var(--text-muted);
				font-size: 0.9rem;
			}

			/* Mission Section */
			.mission-section {
				background: var(--bg-elevated);
				padding: 6rem 2rem;
			}

			.mission-grid {
				display: grid;
				grid-template-columns: repeat(3, 1fr);
				gap: 2rem;
				max-width: 1200px;
				margin: 0 auto;
			}

			.mission-card {
				background: var(--bg-card);
				border: 1px solid var(--border-color);
				border-radius: 20px;
				padding: 2rem;
				text-align: center;
				transition: all 0.3s ease;
			}

			.mission-card:hover {
				border-color: var(--primary);
				transform: translateY(-4px);
			}

			.mission-icon {
				width: 60px;
				height: 60px;
				background: var(--gradient-primary);
				border-radius: 16px;
				display: flex;
				align-items: center;
				justify-content: center;
				margin: 0 auto 1.5rem;
			}

			.mission-icon svg {
				width: 28px;
				height: 28px;
				color: white;
			}

			.mission-card h3 {
				font-size: 1.25rem;
				margin-bottom: 1rem;
			}

			.mission-card p {
				color: var(--text-secondary);
				font-size: 0.95rem;
				margin: 0;
			}

			/* Team Section */
			.team-section {
				padding: 6rem 2rem;
				max-width: 1200px;
				margin: 0 auto;
			}

			.team-header {
				text-align: center;
				margin-bottom: 4rem;
			}

			.team-header h2 {
				margin-bottom: 1rem;
			}

			.team-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 2rem;
			}

			.team-card {
				background: var(--bg-card);
				border: 1px solid var(--border-color);
				border-radius: 24px;
				padding: 2.5rem;
				text-align: center;
				transition: all 0.4s ease;
				position: relative;
				overflow: hidden;
			}

			.team-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				height: 100px;
				background: var(--gradient-primary);
				opacity: 0.1;
			}

			.team-card:hover {
				border-color: var(--primary);
				transform: translateY(-8px);
				box-shadow: 0 20px 60px rgba(139, 92, 246, 0.2);
			}

			.team-avatar {
				width: 120px;
				height: 120px;
				border-radius: 50%;
				background: var(--gradient-primary);
				display: flex;
				align-items: center;
				justify-content: center;
				margin: 0 auto 1.5rem;
				position: relative;
				z-index: 1;
				font-size: 3rem;
				color: white;
				font-weight: 700;
				box-shadow: 0 8px 30px rgba(139, 92, 246, 0.3);
			}

			.team-card h3 {
				font-size: 1.5rem;
				margin-bottom: 0.5rem;
			}

			.team-role {
				color: var(--primary-light);
				font-weight: 500;
				margin-bottom: 1rem;
			}

			.team-bio {
				color: var(--text-secondary);
				font-size: 0.95rem;
				line-height: 1.7;
				margin-bottom: 1.5rem;
			}

			.team-links {
				display: flex;
				justify-content: center;
				gap: 0.75rem;
			}

			.team-links a {
				display: flex;
				align-items: center;
				justify-content: center;
				width: 40px;
				height: 40px;
				border-radius: 10px;
				color: var(--text-muted);
				background: var(--bg-elevated);
				border: 1px solid var(--border-color);
				transition: all 0.3s ease;
			}

			.team-links a:hover {
				color: var(--primary-light);
				border-color: var(--primary);
				background: rgba(139, 92, 246, 0.1);
			}

			/* Timeline Section */
			.timeline-section {
				background: var(--bg-elevated);
				padding: 6rem 2rem;
			}

			.timeline-header {
				text-align: center;
				margin-bottom: 4rem;
				max-width: 1200px;
				margin-left: auto;
				margin-right: auto;
			}

			.timeline {
				max-width: 800px;
				margin: 0 auto;
				position: relative;
			}

			.timeline::before {
				content: '';
				position: absolute;
				left: 50%;
				transform: translateX(-50%);
				width: 2px;
				height: 100%;
				background: var(--border-color);
			}

			.timeline-item {
				display: flex;
				justify-content: flex-end;
				padding-right: 50%;
				position: relative;
				margin-bottom: 3rem;
			}

			.timeline-item:nth-child(even) {
				justify-content: flex-start;
				padding-right: 0;
				padding-left: 50%;
			}

			.timeline-content {
				background: var(--bg-card);
				border: 1px solid var(--border-color);
				border-radius: 16px;
				padding: 1.5rem 2rem;
				max-width: 350px;
				position: relative;
				margin-right: 2rem;
			}

			.timeline-item:nth-child(even) .timeline-content {
				margin-right: 0;
				margin-left: 2rem;
			}

			.timeline-dot {
				position: absolute;
				left: 50%;
				transform: translateX(-50%);
				width: 16px;
				height: 16px;
				background: var(--gradient-primary);
				border-radius: 50%;
				border: 3px solid var(--bg-dark);
			}

			.timeline-year {
				color: var(--primary-light);
				font-weight: 600;
				font-size: 0.875rem;
				margin-bottom: 0.5rem;
			}

			.timeline-content h4 {
				margin-bottom: 0.5rem;
			}

			.timeline-content p {
				color: var(--text-muted);
				font-size: 0.9rem;
				margin: 0;
			}

			/* Responsive */
			@media (max-width: 968px) {
				.story-section {
					grid-template-columns: 1fr;
					gap: 3rem;
				}

				.mission-grid {
					grid-template-columns: 1fr;
				}
			}

			@media (max-width: 768px) {
				.page-header {
					padding: 8rem 1rem 4rem;
				}

				.about-section,
				.team-section {
					padding: 4rem 1rem;
				}

				.mission-section,
				.timeline-section {
					padding: 4rem 1rem;
				}

				.stats-grid {
					grid-template-columns: 1fr;
					gap: 1.5rem;
				}

				.timeline::before {
					left: 0;
				}

				.timeline-item,
				.timeline-item:nth-child(even) {
					padding-left: 2rem;
					padding-right: 0;
					justify-content: flex-start;
				}

				.timeline-content,
				.timeline-item:nth-child(even) .timeline-content {
					margin-left: 1rem;
					margin-right: 0;
					max-width: 100%;
				}

				.timeline-dot {
					left: 0;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		
		<!-- Page Header -->
		<section class="page-header">
			<h1>About <span class="gradient-text">Neuroship</span></h1>
			<p class="lead">
				We're dedicated to creating a better future for every life through innovation in neuroscience and genetic technology.
			</p>
		</section>

		<!-- Story Section -->
		<section class="about-section">
			<div class="story-section">
				<div class="story-content">
					<h2>Our <span class="gradient-text">Story</span></h2>
					<p>
						Neuroship was born from a simple yet profound belief: technology should serve humanity's most fundamental needs—health, understanding, and connection.
					</p>
					<p>
						After witnessing the challenges faced by countless families affected by autism, our founder decided to harness cutting-edge technology to create meaningful change. From smart glasses to gene therapy, we're turning the impossible into reality, one step at a time.
					</p>
					<p>
						Our name "Neuroship" symbolizes a vessel sailing through the realm of neuroscience, carrying hope and innovation toward a more inclusive and healthier future.
					</p>
				</div>
				<div class="story-visual">
					<div class="story-card">
						<div class="stats-grid">
							<div class="stat-item">
								<div class="stat-number">2024</div>
								<div class="stat-label">Year Founded</div>
							</div>
							<div class="stat-item">
								<div class="stat-number">∞</div>
								<div class="stat-label">Possibilities</div>
							</div>
							<div class="stat-item">
								<div class="stat-number">3</div>
								<div class="stat-label">Core Goals</div>
							</div>
							<div class="stat-item">
								<div class="stat-number">1</div>
								<div class="stat-label">Shared Mission</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<div class="section-divider"></div>

		<!-- Mission Section -->
		<section class="mission-section">
			<div class="team-header">
				<h2>Our <span class="gradient-text">Core Values</span></h2>
				<p class="lead">The principles that guide us forward</p>
			</div>
			<div class="mission-grid">
				<div class="mission-card">
					<div class="mission-icon">
						<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
						</svg>
					</div>
					<h3>Human-Centered</h3>
					<p>Every research project and product is ultimately aimed at improving human quality of life</p>
				</div>
				<div class="mission-card">
					<div class="mission-icon">
						<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<circle cx="12" cy="12" r="10"/>
							<path d="M12 6v6l4 2"/>
						</svg>
					</div>
					<h3>Continuous Innovation</h3>
					<p>Constantly exploring scientific frontiers with innovative thinking to solve the most challenging medical problems</p>
				</div>
				<div class="mission-card">
					<div class="mission-icon">
						<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
							<circle cx="9" cy="7" r="4"/>
							<path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75"/>
						</svg>
					</div>
					<h3>Open Collaboration</h3>
					<p>Working closely with world-leading scientific research institutions and medical teams to advance human health</p>
				</div>
			</div>
		</section>

		<!-- Team Section -->
		<section class="team-section">
			<div class="team-header">
				<h2>Our <span class="gradient-text">Team</span></h2>
				<p class="lead">Pioneers united by passion and expertise</p>
			</div>
			<div class="team-grid">
				<!-- Founder Card -->
				<div class="team-card">
					<div class="team-avatar">T</div>
					<h3>Takayuki Ishii</h3>
					<div class="team-role">Founder & CEO</div>
					<p class="team-bio">
						Driven by a dream to change the world, dedicated to helping individuals with autism through neuroscience and genetic technology. Believes that the power of technology can give every life the opportunity to shine.
					</p>
					<div class="team-links">
						<a href="https://github.com/raucvr" target="_blank" aria-label="GitHub">
