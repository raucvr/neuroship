---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, COMPANY, GOALS } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`About - ${SITE_TITLE}`} description="Learn about Neuroship's mission, vision, and team" />
		<style>
			/* Animated Gradient Background */
			@keyframes gradientShift {
				0% {
					background-position: 0% 50%;
				}
				50% {
					background-position: 100% 50%;
				}
				100% {
					background-position: 0% 50%;
				}
			}

			@keyframes floatOrb {
				0%, 100% {
					transform: translate(0, 0) scale(1);
					opacity: 0.4;
				}
				25% {
					transform: translate(10%, -10%) scale(1.1);
					opacity: 0.5;
				}
				50% {
					transform: translate(-5%, 15%) scale(0.95);
					opacity: 0.35;
				}
				75% {
					transform: translate(-10%, -5%) scale(1.05);
					opacity: 0.45;
				}
			}

			/* Vision Section - Hero */
			.vision-hero {
				padding: 10rem 2rem 6rem;
				position: relative;
				overflow: hidden;
				background: linear-gradient(135deg, 
					rgb(230, 247, 255) 0%, 
					rgb(240, 255, 240) 25%,
					rgb(245, 250, 255) 50%,
					rgb(235, 255, 245) 75%,
					rgb(230, 247, 255) 100%);
				background-size: 400% 400%;
				animation: gradientShift 15s ease infinite;
			}

			.vision-hero::before {
				content: '';
				position: absolute;
				top: -50%;
				left: -50%;
				width: 100%;
				height: 100%;
				background: radial-gradient(circle, rgba(200, 230, 255, 0.5) 0%, transparent 60%);
				animation: floatOrb 20s ease-in-out infinite;
				pointer-events: none;
			}

			.vision-hero::after {
				content: '';
				position: absolute;
				bottom: -30%;
				right: -30%;
				width: 80%;
				height: 80%;
				background: radial-gradient(circle, rgba(200, 255, 220, 0.4) 0%, transparent 60%);
				animation: floatOrb 25s ease-in-out infinite reverse;
				pointer-events: none;
			}

			.vision-content {
				max-width: 1400px;
				margin: 0 auto;
				position: relative;
				z-index: 1;
			}

			.vision-eyebrow {
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.0625rem;
				text-transform: uppercase;
				margin-bottom: 2rem;
				display: block;
			}

			.vision-statement {
				font-size: clamp(1.75rem, 4vw, 2.5rem);
				font-weight: 200;
				line-height: 1.3;
				letter-spacing: -0.02em;
				max-width: 900px;
				margin: 0;
			}

			/* Main Content */
			.main-content {
				max-width: 1400px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			/* Content Grid */
			.content-section {
				padding: 4rem 0;
				border-top: 1px solid var(--border-color);
			}

			.section-header {
				display: flex;
				justify-content: space-between;
				align-items: flex-start;
				margin-bottom: 3rem;
			}

			.section-intro {
				max-width: 600px;
			}

			.section-eyebrow {
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.0625rem;
				text-transform: uppercase;
				margin-bottom: 1rem;
			}

			.section-title {
				font-size: clamp(1.5rem, 3vw, 2.25rem);
				font-weight: 200;
				margin-bottom: 0;
			}

			/* Story Grid - The meaning of Neuroship */
			.story-intro {
				font-size: 1rem;
				line-height: 1.6;
				margin-bottom: 3rem;
				max-width: 800px;
			}

			.meaning-grid {
				display: grid;
				grid-template-columns: repeat(3, 1fr);
				gap: 0;
			}

			.meaning-card {
				background: var(--bg-primary);
				padding: 2rem;
				border: 1px solid var(--border-color);
				margin-left: -1px;
				margin-top: -1px;
			}

			.meaning-card:first-child {
				margin-left: 0;
			}

			.meaning-phase {
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.0625rem;
				text-transform: uppercase;
				color: var(--text-muted);
				margin-bottom: 0.75rem;
			}

			.meaning-title {
				font-size: 1.375rem;
				font-weight: 300;
				margin-bottom: 1rem;
			}

			.meaning-description {
				font-size: 0.875rem;
				line-height: 1.5;
				margin-bottom: 1rem;
			}

			.meaning-summary {
				font-size: 0.875rem;
				line-height: 1.5;
				color: var(--text-muted);
				font-style: italic;
				margin: 0;
				padding-top: 1rem;
				border-top: 1px solid var(--border-color);
			}

			/* Values Grid */
			/* Values - Isomorphic Labs card style */
			.values-grid {
				display: grid;
				grid-template-columns: repeat(3, 1fr);
				gap: 1.5rem;
			}

			.value-card {
				background: var(--bg-primary);
				border: 1px solid var(--border-color);
				border-radius: 16px;
				padding: 2.5rem;
				transition: box-shadow 0.3s ease;
			}

			.value-card:hover {
				box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
			}

			.value-title {
				font-size: clamp(1.5rem, 2.5vw, 1.75rem);
				font-weight: 300;
				line-height: 1.2;
				margin: 0 0 1.5rem 0;
			}

			.value-description {
				font-size: 0.9375rem;
				line-height: 1.6;
				color: var(--text-secondary);
				margin: 0;
			}

			/* Team Section */
			.team-grid {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 4rem;
			}

			.team-member {
				border: 1px solid var(--border-color);
				padding: 2rem;
			}

			.member-eyebrow {
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.0625rem;
				text-transform: uppercase;
				color: var(--text-muted);
				margin-bottom: 0.5rem;
			}

			.member-name {
				font-size: 1.5rem;
				font-weight: 300;
				margin-bottom: 1rem;
			}

			.member-bio {
				font-size: 0.875rem;
				line-height: 1.4;
				color: var(--text-muted);
				margin-bottom: 1.5rem;
			}

			.member-links {
				display: flex;
				gap: 1rem;
			}

			.member-links a {
				font-size: 0.875rem;
				color: var(--text-secondary);
				text-decoration: none;
				transition: color 0.3s ease;
			}

			.member-links a:hover {
				color: var(--text-muted);
			}

			/* Timeline Section */
			.timeline-list {
				display: flex;
				flex-direction: column;
			}

			.timeline-item {
				display: grid;
				grid-template-columns: 120px 1fr;
				gap: 2rem;
				padding: 2rem 0;
				border-bottom: 1px solid var(--border-color);
			}

			.timeline-item:first-child {
				padding-top: 0;
			}

			.timeline-year {
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.05em;
				text-transform: uppercase;
				color: var(--text-muted);
			}

			.timeline-content h3 {
				font-size: 1.25rem;
				font-weight: 300;
				margin-bottom: 0.5rem;
			}

			.timeline-content p {
				font-size: 0.875rem;
				color: var(--text-muted);
				margin: 0;
			}

			/* Animations */
			@keyframes fadeInUp {
				from {
					opacity: 0;
					transform: translateY(30px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}

			.animate-fade-in {
				opacity: 0;
				animation: fadeInUp 0.8s ease forwards;
			}

			.animate-delay-1 { animation-delay: 0.1s; }
			.animate-delay-2 { animation-delay: 0.2s; }
			.animate-delay-3 { animation-delay: 0.3s; }
			.animate-delay-4 { animation-delay: 0.4s; }
			.animate-delay-5 { animation-delay: 0.5s; }
			.animate-delay-6 { animation-delay: 0.6s; }

			/* Scroll animations */
			.scroll-animate {
				opacity: 0;
				transform: translateY(30px);
				transition: opacity 0.6s ease, transform 0.6s ease;
			}

			.scroll-animate.visible {
				opacity: 1;
				transform: translateY(0);
			}

			/* Staggered animation for cards */
			.meaning-card.scroll-animate:nth-child(1) { transition-delay: 0.1s; }
			.meaning-card.scroll-animate:nth-child(2) { transition-delay: 0.2s; }
			.meaning-card.scroll-animate:nth-child(3) { transition-delay: 0.3s; }

			.value-card.scroll-animate:nth-child(1) { transition-delay: 0.1s; }
			.value-card.scroll-animate:nth-child(2) { transition-delay: 0.2s; }
			.value-card.scroll-animate:nth-child(3) { transition-delay: 0.3s; }

			.team-member.scroll-animate:nth-child(1) { transition-delay: 0.1s; }
			.team-member.scroll-animate:nth-child(2) { transition-delay: 0.2s; }

			.timeline-item.scroll-animate:nth-child(1) { transition-delay: 0.1s; }
			.timeline-item.scroll-animate:nth-child(2) { transition-delay: 0.2s; }
			.timeline-item.scroll-animate:nth-child(3) { transition-delay: 0.3s; }
			.timeline-item.scroll-animate:nth-child(4) { transition-delay: 0.4s; }

			/* Responsive */
			@media (max-width: 1024px) {
				.meaning-grid,
				.values-grid {
					grid-template-columns: 1fr;
				}
			}

			@media (max-width: 768px) {
				.vision-hero {
					padding: 7rem 1rem 4rem;
				}

				.main-content {
					padding: 0 1rem;
				}

				.content-section {
					padding: 3rem 0;
				}

				.team-grid {
					grid-template-columns: 1fr;
					gap: 2rem;
				}

				.section-header {
					flex-direction: column;
					gap: 1rem;
				}

				.timeline-item {
					grid-template-columns: 1fr;
					gap: 0.5rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		
		<!-- Vision Hero -->
		<header class="vision-hero">
			<div class="vision-content">
				<span class="vision-eyebrow animate-fade-in">Our Vision</span>
				<p class="vision-statement animate-fade-in animate-delay-2">
					Decoding the rhythms of life,<br/>
					ensuring no mind is left behind,<br/>
					granting every life the freedom to reach the future.
				</p>
			</div>
		</header>

		<main class="main-content">
			<!-- Story Section - The Meaning of Neuroship -->
			<section class="content-section" id="story-section">
				<div class="section-header">
					<div class="section-intro">
						<span class="section-eyebrow">Our Story</span>
						<h2 class="section-title">The evolving meaning of Neuroship</h2>
					</div>
				</div>

				<p class="story-intro">
					Our name "Neuroship" carries layered meanings that evolve with our mission. As we progress through each phase, the interpretation of both "Neuro" and "Ship" transforms to reflect our deepening commitment to human potential.
				</p>

				<div class="meaning-grid">
					<!-- Phase 1: Smart Glasses -->
					<div class="meaning-card scroll-animate">
						<span class="meaning-phase">Phase 1 · Short-term</span>
						<h3 class="meaning-title">Smart Glasses</h3>
						<p class="meaning-description">
							AI-powered glasses as an external neural pathway, helping individuals with autism navigate social interactions.
						</p>
						<p class="meaning-summary">
							"Neural Vessel" — A carrier bridging minds to the world.
						</p>
					</div>

					<!-- Phase 2: Gene Therapy -->
					<div class="meaning-card scroll-animate">
						<span class="meaning-phase">Phase 2 · Mid-term</span>
						<h3 class="meaning-title">Gene Therapy</h3>
						<p class="meaning-description">
							Precision gene editing to repair neural systems at their biological roots.
						</p>
						<p class="meaning-summary">
							"Neural Mastery" — Craftsmanship in rewriting life's code.
						</p>
					</div>

					<!-- Phase 3: Evolution Engineering -->
					<div class="meaning-card scroll-animate">
						<span class="meaning-phase">Phase 3 · Long-term</span>
						<h3 class="meaning-title">Evolution Engineering</h3>
						<p class="meaning-description">
							Gene editing to expand human cognitive potential beyond natural limits.
						</p>
						<p class="meaning-summary">
							"Civilization's Vessel" — A starship toward intentional evolution.
						</p>
					</div>
				</div>
			</section>

			<!-- Values Section -->
			<section class="content-section">
				<div class="section-header">
					<div class="section-intro">
						<span class="section-eyebrow">Our Values</span>
						<h2 class="section-title">The principles that guide us forward.</h2>
					</div>
				</div>

				<div class="values-grid">
					<div class="value-card scroll-animate">
						<h3 class="value-title">Human-Centered</h3>
						<p class="value-description">Every research project and product is ultimately aimed at improving human quality of life. We believe technology should serve humanity's deepest needs.</p>
					</div>
					<div class="value-card scroll-animate">
						<h3 class="value-title">Continuous<br/>Innovation</h3>
						<p class="value-description">Constantly exploring scientific frontiers with innovative thinking to solve the most challenging problems.</p>
					</div>
					<div class="value-card scroll-animate">
						<h3 class="value-title">Open Collaboration</h3>
						<p class="value-description">Working closely with world-leading research institutions and medical teams to advance human health.</p>
					</div>
				</div>
			</section>

			<!-- Team Section -->
			<section class="content-section">
				<div class="section-header">
					<div class="section-intro">
						<span class="section-eyebrow">Our Team</span>
						<h2 class="section-title">Pioneers united by passion and expertise.</h2>
					</div>
					<a href="mailto:raucvr@berkeley.edu" class="arrow-link">
						Join Us
						<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M5 12h14M12 5l7 7-7 7"/>
						</svg>
					</a>
				</div>

				<div class="team-grid">
					<div class="team-member scroll-animate">
						<span class="member-eyebrow">Founder & CEO</span>
						<h3 class="member-name">Takayuki Ishii</h3>
						<p class="member-bio">
							Driven by a dream to change the world, dedicated to helping individuals with autism through neuroscience and AI technology. Believes that the power of technology can give every life the opportunity to shine.
						</p>
						<div class="member-links">
							<a href="https://github.com/raucvr" target="_blank">GitHub</a>
							<a href="https://www.linkedin.com/in/takayuki-ishii-55b60221b/" target="_blank">LinkedIn</a>
							<a href="mailto:raucvr@berkeley.edu">Email</a>
						</div>
					</div>
					<div class="team-member scroll-animate">
						<span class="member-eyebrow">Open Position</span>
						<h3 class="member-name">Join Our Team</h3>
						<p class="member-bio">
							We're looking for like-minded partners. If you're passionate about neuroscience, AI, or product design, we'd love to hear from you.
						</p>
						<div class="member-links">
							<a href="mailto:raucvr@berkeley.edu">Apply Now →</a>
						</div>
					</div>
				</div>
			</section>

			<!-- Timeline Section -->
			<section class="content-section">
				<div class="section-header">
					<div class="section-intro">
						<span class="section-eyebrow">Our Journey</span>
						<h2 class="section-title">Building the future, one milestone at a time.</h2>
					</div>
				</div>

				<div class="timeline-list">
					<div class="timeline-item scroll-animate">
						<span class="timeline-year">2023</span>
						<div class="timeline-content">
							<h3>Neuroship Founded</h3>
							<p>With a vision to change the world, Neuroship officially sets sail.</p>
						</div>
					</div>
					<div class="timeline-item scroll-animate">
						<span class="timeline-year">Phase 1</span>
						<div class="timeline-content">
							<h3>Smart Glasses R&D</h3>
							<p>Developing AI-powered smart glasses as an "external neural pathway" for autism assistance.</p>
						</div>
					</div>
					<div class="timeline-item scroll-animate">
						<span class="timeline-year">Phase 2</span>
						<div class="timeline-content">
							<h3>Gene Therapy Research</h3>
							<p>Mastering the craftsmanship of neural gene editing to treat autism at its roots.</p>
						</div>
					</div>
					<div class="timeline-item scroll-animate">
						<span class="timeline-year">Phase 3</span>
						<div class="timeline-content">
							<h3>Evolution Engineering</h3>
							<p>Building the starship that carries humanity toward intentional evolution.</p>
						</div>
					</div>
				</div>
			</section>
		</main>

		<Footer />

		<script is:inline>
			// Scroll animation observer
			document.addEventListener('DOMContentLoaded', () => {
				const animateElements = document.querySelectorAll('.scroll-animate');
				
				const observer = new IntersectionObserver((entries) => {
					entries.forEach(entry => {
						if (entry.isIntersecting) {
							entry.target.classList.add('visible');
						}
					});
				}, {
					threshold: 0.1,
					rootMargin: '0px 0px -50px 0px'
				});

				animateElements.forEach(el => observer.observe(el));
			});
		</script>
	</body>
</html>
