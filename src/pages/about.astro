---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, COMPANY, GOALS } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`About - ${SITE_TITLE}`} description="Learn about Neuroship's mission, vision, and team" />
		<style>
			/* Vision Section - Hero */
			.vision-hero {
				padding: 10rem 2rem 6rem;
				background: var(--bg-hero-gradient, linear-gradient(0deg, rgb(230, 247, 255), rgb(233, 255, 233)));
			}

			.vision-content {
				max-width: 1400px;
				margin: 0 auto;
			}

			.vision-eyebrow {
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.0625rem;
				text-transform: uppercase;
				margin-bottom: 2rem;
				display: block;
			}

			.vision-statement {
				font-size: clamp(1.75rem, 4vw, 2.5rem);
				font-weight: 200;
				line-height: 1.3;
				letter-spacing: -0.02em;
				max-width: 900px;
				margin: 0;
			}

			/* Main Content */
			.main-content {
				max-width: 1400px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			/* Content Grid */
			.content-section {
				padding: 4rem 0;
				border-top: 1px solid var(--border-color);
			}

			.section-header {
				display: flex;
				justify-content: space-between;
				align-items: flex-start;
				margin-bottom: 3rem;
			}

			.section-intro {
				max-width: 600px;
			}

			.section-eyebrow {
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.0625rem;
				text-transform: uppercase;
				margin-bottom: 1rem;
			}

			.section-title {
				font-size: clamp(1.5rem, 3vw, 2.25rem);
				font-weight: 200;
				margin-bottom: 0;
			}

			/* Story Grid - The meaning of Neuroship */
			.story-intro {
				font-size: 1rem;
				line-height: 1.6;
				margin-bottom: 3rem;
				max-width: 800px;
			}

			.meaning-grid {
				display: grid;
				grid-template-columns: repeat(3, 1fr);
				gap: 1px;
				background: var(--border-color);
				border: 1px solid var(--border-color);
			}

			.meaning-card {
				background: var(--bg-primary);
				padding: 2rem;
			}

			.meaning-phase {
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.0625rem;
				text-transform: uppercase;
				color: var(--text-muted);
				margin-bottom: 0.5rem;
			}

			.meaning-keyword {
				font-size: 0.75rem;
				font-weight: 500;
				letter-spacing: 0.05em;
				text-transform: uppercase;
				margin-bottom: 1rem;
				color: var(--text-primary);
			}

			.meaning-title {
				font-size: 1.375rem;
				font-weight: 300;
				margin-bottom: 1rem;
			}

			.meaning-neuro,
			.meaning-ship {
				font-size: 0.875rem;
				line-height: 1.5;
				margin-bottom: 1rem;
			}

			.meaning-neuro strong,
			.meaning-ship strong {
				font-weight: 500;
			}

			.meaning-summary {
				font-size: 0.875rem;
				line-height: 1.5;
				color: var(--text-muted);
				font-style: italic;
				margin: 0;
				padding-top: 1rem;
				border-top: 1px solid var(--border-color);
			}

			/* Values Grid */
			.values-grid {
				display: grid;
				grid-template-columns: repeat(3, 1fr);
				gap: 1px;
				background: var(--border-color);
				border: 1px solid var(--border-color);
			}

			.value-card {
				background: var(--bg-primary);
				padding: 2rem;
			}

			.value-eyebrow {
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.0625rem;
				text-transform: uppercase;
				margin-bottom: 1rem;
			}

			.value-title {
				font-size: 1.375rem;
				font-weight: 300;
				margin-bottom: 1rem;
			}

			.value-description {
				font-size: 0.875rem;
				line-height: 1.4;
				color: var(--text-muted);
				margin: 0;
			}

			/* Team Section */
			.team-grid {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 4rem;
			}

			.team-member {
				border: 1px solid var(--border-color);
				padding: 2rem;
			}

			.member-eyebrow {
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.0625rem;
				text-transform: uppercase;
				color: var(--text-muted);
				margin-bottom: 0.5rem;
			}

			.member-name {
				font-size: 1.5rem;
				font-weight: 300;
				margin-bottom: 1rem;
			}

			.member-bio {
				font-size: 0.875rem;
				line-height: 1.4;
				color: var(--text-muted);
				margin-bottom: 1.5rem;
			}

			.member-links {
				display: flex;
				gap: 1rem;
			}

			.member-links a {
				font-size: 0.875rem;
				color: var(--text-secondary);
				text-decoration: none;
				transition: color 0.3s ease;
			}

			.member-links a:hover {
				color: var(--text-muted);
			}

			/* Timeline Section */
			.timeline-list {
				display: flex;
				flex-direction: column;
			}

			.timeline-item {
				display: grid;
				grid-template-columns: 120px 1fr;
				gap: 2rem;
				padding: 2rem 0;
				border-bottom: 1px solid var(--border-color);
			}

			.timeline-item:first-child {
				padding-top: 0;
			}

			.timeline-year {
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.05em;
				text-transform: uppercase;
				color: var(--text-muted);
			}

			.timeline-content h3 {
				font-size: 1.25rem;
				font-weight: 300;
				margin-bottom: 0.5rem;
			}

			.timeline-content p {
				font-size: 0.875rem;
				color: var(--text-muted);
				margin: 0;
			}

			/* Responsive */
			@media (max-width: 1024px) {
				.meaning-grid,
				.values-grid {
					grid-template-columns: 1fr;
				}
			}

			@media (max-width: 768px) {
				.vision-hero {
					padding: 6rem 1rem 3rem;
				}

				.main-content {
					padding: 0 1rem;
				}

				.content-section {
					padding: 3rem 0;
				}

				.team-grid {
					grid-template-columns: 1fr;
					gap: 2rem;
				}

				.section-header {
					flex-direction: column;
					gap: 1rem;
				}

				.timeline-item {
					grid-template-columns: 1fr;
					gap: 0.5rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		
		<!-- Vision Hero -->
		<header class="vision-hero">
			<div class="vision-content">
				<span class="vision-eyebrow">Our Vision</span>
				<p class="vision-statement">
					Decoding the rhythms of life, ensuring no mind is left behind, granting every life the freedom to reach the future.
				</p>
			</div>
		</header>

		<main class="main-content">
			<!-- Story Section - The Meaning of Neuroship -->
			<section class="content-section">
				<div class="section-header">
					<div class="section-intro">
						<span class="section-eyebrow">Our Story</span>
						<h2 class="section-title">The evolving meaning of Neuroship</h2>
					</div>
				</div>

				<p class="story-intro">
					Our name "Neuroship" carries layered meanings that evolve with our mission. As we progress through each phase, the interpretation of both "Neuro" and "Ship" transforms to reflect our deepening commitment to human potential.
				</p>

				<div class="meaning-grid">
					<!-- Phase 1: Smart Glasses -->
					<div class="meaning-card">
						<span class="meaning-phase">Phase 1 · Short-term</span>
						<span class="meaning-keyword">Vessel & Connection</span>
						<h3 class="meaning-title">Smart Glasses</h3>
						<p class="meaning-neuro">
							<strong>Neuro:</strong> Points directly to autism and neurodevelopmental diversity. Smart glasses serve as an "external neural pathway," bridging gaps in social signal recognition and emotional understanding.
						</p>
						<p class="meaning-ship">
							<strong>Ship:</strong> Symbolizes an "empowerment platform." The glasses are a vessel carrying intelligent algorithms, like a small boat guiding users safely through the complex ocean of social interaction.
						</p>
						<p class="meaning-summary">
							"Neural Vessel" — Not a replacement, but a carrier and assistant, helping individuals with autism establish smooth neural connections with the outside world.
						</p>
					</div>

					<!-- Phase 2: Gene Therapy -->
					<div class="meaning-card">
						<span class="meaning-phase">Phase 2 · Mid-term</span>
						<span class="meaning-keyword">Craftsmanship & Navigation</span>
						<h3 class="meaning-title">Gene Therapy</h3>
						<p class="meaning-neuro">
							<strong>Neuro:</strong> The goal shifts from external assistance to fundamental code. We focus on the biological essence of the nervous system and synaptic repair.
						</p>
						<p class="meaning-ship">
							<strong>-ship:</strong> Takes on its suffix meaning (like "craftsmanship"). Symbolizes the mastery of precise neural gene editing — a testament to our expertise in gene-craftsmanship.
						</p>
						<p class="meaning-summary">
							"Neural Mastery" — Ship evolves from a physical vessel to a state of professional excellence, navigating patients from limited function toward health.
						</p>
					</div>

					<!-- Phase 3: Evolution Engineering -->
					<div class="meaning-card">
						<span class="meaning-phase">Phase 3 · Long-term</span>
						<span class="meaning-keyword">Starship & Evolution</span>
						<h3 class="meaning-title">Evolution Engineering</h3>
						<p class="meaning-neuro">
							<strong>Neuro:</strong> Represents "super-brain" or "enhanced intelligence." No longer limited to treating conditions, but expanding human cognitive boundaries, perception depth, and neural efficiency.
						</p>
						<p class="meaning-ship">
							<strong>Ship:</strong> Takes on the character of a "Starship" or "Noah's Ark." Gene editing becomes the propulsion system, carrying humanity away from random natural evolution toward an intentional "post-human" future.
						</p>
						<p class="meaning-summary">
							"Civilization's Vessel" — Not just technology, but the ship carrying human civilization toward higher dimensions of existence.
						</p>
					</div>
				</div>
			</section>

			<!-- Values Section -->
			<section class="content-section">
				<div class="section-header">
					<div class="section-intro">
						<span class="section-eyebrow">Our Values</span>
						<h2 class="section-title">The principles that guide us forward.</h2>
					</div>
				</div>

				<div class="values-grid">
					<div class="value-card">
						<span class="value-eyebrow">01</span>
						<h3 class="value-title">Human-Centered</h3>
						<p class="value-description">Every research project and product is ultimately aimed at improving human quality of life.</p>
					</div>
					<div class="value-card">
						<span class="value-eyebrow">02</span>
						<h3 class="value-title">Continuous Innovation</h3>
						<p class="value-description">Constantly exploring scientific frontiers with innovative thinking to solve the most challenging problems.</p>
					</div>
					<div class="value-card">
						<span class="value-eyebrow">03</span>
						<h3 class="value-title">Open Collaboration</h3>
						<p class="value-description">Working closely with world-leading research institutions and medical teams to advance human health.</p>
					</div>
				</div>
			</section>

			<!-- Team Section -->
			<section class="content-section">
				<div class="section-header">
					<div class="section-intro">
						<span class="section-eyebrow">Our Team</span>
						<h2 class="section-title">Pioneers united by passion and expertise.</h2>
					</div>
					<a href="mailto:raucvr@berkeley.edu" class="arrow-link">
						Join Us
						<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M5 12h14M12 5l7 7-7 7"/>
						</svg>
					</a>
				</div>

				<div class="team-grid">
					<div class="team-member">
						<span class="member-eyebrow">Founder & CEO</span>
						<h3 class="member-name">Takayuki Ishii</h3>
						<p class="member-bio">
							Driven by a dream to change the world, dedicated to helping individuals with autism through neuroscience and AI technology. Believes that the power of technology can give every life the opportunity to shine.
						</p>
						<div class="member-links">
							<a href="https://github.com/raucvr" target="_blank">GitHub</a>
							<a href="https://www.linkedin.com/in/takayuki-ishii-55b60221b/" target="_blank">LinkedIn</a>
							<a href="mailto:raucvr@berkeley.edu">Email</a>
						</div>
					</div>
					<div class="team-member">
						<span class="member-eyebrow">Open Position</span>
						<h3 class="member-name">Join Our Team</h3>
						<p class="member-bio">
							We're looking for like-minded partners. If you're passionate about neuroscience, AI, or product design, we'd love to hear from you.
						</p>
						<div class="member-links">
							<a href="mailto:raucvr@berkeley.edu">Apply Now →</a>
						</div>
					</div>
				</div>
			</section>

			<!-- Timeline Section -->
			<section class="content-section">
				<div class="section-header">
					<div class="section-intro">
						<span class="section-eyebrow">Our Journey</span>
						<h2 class="section-title">Building the future, one milestone at a time.</h2>
					</div>
				</div>

				<div class="timeline-list">
					<div class="timeline-item">
						<span class="timeline-year">2023</span>
						<div class="timeline-content">
							<h3>Neuroship Founded</h3>
							<p>With a vision to change the world, Neuroship officially sets sail.</p>
						</div>
					</div>
					<div class="timeline-item">
						<span class="timeline-year">Phase 1</span>
						<div class="timeline-content">
							<h3>Smart Glasses R&D</h3>
							<p>Developing AI-powered smart glasses as an "external neural pathway" for autism assistance.</p>
						</div>
					</div>
					<div class="timeline-item">
						<span class="timeline-year">Phase 2</span>
						<div class="timeline-content">
							<h3>Gene Therapy Research</h3>
							<p>Mastering the craftsmanship of neural gene editing to treat autism at its roots.</p>
						</div>
					</div>
					<div class="timeline-item">
						<span class="timeline-year">Phase 3</span>
						<div class="timeline-content">
							<h3>Evolution Engineering</h3>
							<p>Building the starship that carries humanity toward intentional evolution.</p>
						</div>
					</div>
				</div>
			</section>
		</main>

		<Footer />
	</body>
</html>
