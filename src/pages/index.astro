---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, COMPANY, LOGOS } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			/* Animated Gradient Keyframes */
			@keyframes gradientShift {
				0% { background-position: 0% 50%; }
				50% { background-position: 100% 50%; }
				100% { background-position: 0% 50%; }
			}

			@keyframes floatOrb {
				0%, 100% { transform: translate(0, 0) scale(1); opacity: 0.4; }
				25% { transform: translate(10%, -10%) scale(1.1); opacity: 0.5; }
				50% { transform: translate(-5%, 15%) scale(0.95); opacity: 0.35; }
				75% { transform: translate(-10%, -5%) scale(1.05); opacity: 0.45; }
			}

			/* Hero Section - Light gradient background like Isomorphic Labs */
			.hero {
				min-height: 100vh;
				display: grid;
				grid-template-columns: 1fr 1fr;
				align-items: center;
				padding: 8rem 2rem 4rem;
				position: relative;
				overflow: hidden;
				background: linear-gradient(135deg, 
					rgb(230, 247, 255) 0%, 
					rgb(240, 255, 240) 25%,
					rgb(245, 250, 255) 50%,
					rgb(235, 255, 245) 75%,
					rgb(230, 247, 255) 100%);
				background-size: 400% 400%;
				animation: gradientShift 15s ease infinite;
			}

			/* Video Container - 右侧 */
			.hero-video-container {
				position: relative;
				width: 100%;
				height: 100%;
				min-height: 600px;
				z-index: 1;
				display: flex;
				align-items: center;
				justify-content: center;
			}

			.hero-video {
				width: 100%;
				height: 100%;
				object-fit: contain;
				max-height: 700px;
			}

			.hero-content {
				max-width: 700px;
				padding-left: 4rem;
				position: relative;
				z-index: 2;
			}

			/* Floating orb effects for light background */
			.hero::before {
				content: '';
				position: absolute;
				top: -50%;
				left: -50%;
				width: 100%;
				height: 100%;
				background: radial-gradient(circle, rgba(200, 230, 255, 0.5) 0%, transparent 60%);
				animation: floatOrb 20s ease-in-out infinite;
				pointer-events: none;
			}

			.hero::after {
				content: '';
				position: absolute;
				bottom: -30%;
				right: -30%;
				width: 80%;
				height: 80%;
				background: radial-gradient(circle, rgba(200, 255, 220, 0.4) 0%, transparent 60%);
				animation: floatOrb 25s ease-in-out infinite reverse;
				pointer-events: none;
			}

			/* Animated title - dark text on light background */
			.hero-title {
				font-size: clamp(3rem, 6vw, 4.5rem);
				font-weight: 200;
				line-height: 1.1;
				letter-spacing: -0.03em;
				margin-bottom: 2rem;
				max-width: 700px;
				color: var(--text-primary);
			}

			.hero-title .line {
				display: block;
				overflow: hidden;
				padding-bottom: 0.15em; /* Prevent descenders like 'y' from being clipped */
				margin-bottom: -0.15em; /* Compensate for padding */
			}

			.hero-title .line-inner {
				display: block;
				opacity: 0;
				transform: translateY(100%);
				animation: slideUpReveal 0.8s ease forwards;
			}

			.hero-title .line:nth-child(1) .line-inner { animation-delay: 0.3s; }
			.hero-title .line:nth-child(2) .line-inner { animation-delay: 0.4s; }
			.hero-title .line:nth-child(3) .line-inner { animation-delay: 0.5s; }

			.hero-description {
				font-size: 1rem;
				line-height: 1.5;
				color: var(--text-primary);
				max-width: 600px;
				margin-bottom: 0;
				font-weight: 300;
				opacity: 0;
				animation: fadeInUp 0.8s ease 0.7s forwards;
			}

			/* Main Content */
			.main-content {
				max-width: 1400px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			/* Content Grid */
			.content-grid {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 4rem;
				padding: 4rem 0;
				border-top: 1px solid var(--border-color);
			}

			.content-text {
				opacity: 0;
				animation: fadeInUp 0.6s ease forwards;
				animation-delay: 0.2s;
			}

			.content-text p {
				font-size: 0.875rem;
				line-height: 1.5;
				margin-bottom: 1rem;
			}

			/* News Section */
			.news-section-inline {
				opacity: 0;
				animation: fadeInUp 0.6s ease forwards;
				animation-delay: 0.4s;
			}

			.news-header {
				display: flex;
				justify-content: space-between;
				align-items: center;
				margin-bottom: 2rem;
			}

			.news-title {
				display: flex;
				align-items: center;
				gap: 0.5rem;
			}

			/* Animated eyebrow text - Isomorphic Labs style */
			.news-eyebrow {
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.0625rem;
				text-transform: uppercase;
				display: flex;
				gap: 0.15em;
			}

			.news-eyebrow .char {
				display: inline-block;
				opacity: 0;
				animation: charFadeIn 0.4s ease forwards;
			}

			.news-list {
				list-style: none;
				padding: 0;
				margin: 0;
			}

			.news-item {
				padding: 1rem 0;
				border-bottom: 1px solid var(--border-color);
			}

			.news-item:first-child {
				padding-top: 0;
			}

			.news-link {
				font-size: 0.875rem;
				color: var(--text-primary);
				text-decoration: none;
				transition: color 0.3s ease;
			}

			.news-link:hover {
				color: var(--text-muted);
			}

			/* Animations - Isomorphic Labs style */
			@keyframes fadeIn {
				from { opacity: 0; }
				to { opacity: 1; }
			}

			@keyframes fadeInUp {
				from {
					opacity: 0;
					transform: translateY(30px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@keyframes slideUpReveal {
				from {
					opacity: 0;
					transform: translateY(100%);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@keyframes charFadeIn {
				from {
					opacity: 0;
					transform: translateY(10px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}

			/* Responsive */
			@media (max-width: 1024px) {
				.hero {
					grid-template-columns: 1fr;
					gap: 2rem;
				}

				.hero-video-container {
					min-height: 400px;
					order: -1; /* 视频在上方 */
				}

				.hero-content {
					padding-left: 2rem;
					padding-right: 2rem;
					max-width: 100%;
				}
			}

			@media (max-width: 768px) {
				.hero {
					padding: 6rem 1rem 3rem;
					min-height: auto;
				}

				.hero-content {
					padding-left: 1rem;
					padding-right: 1rem;
				}

				.hero-title {
					font-size: clamp(2rem, 8vw, 3rem);
				}

				.hero-video-container {
					min-height: 300px;
				}

				.main-content {
					padding: 0 1rem;
				}

				.content-grid {
					grid-template-columns: 1fr;
					gap: 2rem;
				}

				.news-header {
					flex-direction: column;
					align-items: flex-start;
					gap: 1rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		
		<!-- Hero Section with Video Animation -->
		<section class="hero">
			<!-- 左侧文字内容 -->
			<div class="hero-content">
				<!-- Animated Title -->
				<h1 class="hero-title">
					<span class="line"><span class="line-inner">Decoding</span></span>
					<span class="line"><span class="line-inner">the rhythms</span></span>
					<span class="line"><span class="line-inner">of life</span></span>
				</h1>
				<p class="hero-description">
					We're entering a new era of neuroscience — one where AI can unlock deeper understanding of the mind, faster breakthroughs, and life-changing therapies. At Neuroship, we're building that future.
				</p>
			</div>
			
			<!-- 右侧视频动画 -->
			<div class="hero-video-container">
				<video 
					class="hero-video"
					autoplay 
					loop 
					muted 
					playsinline
					preload="auto"
				>
					<source src="/videos/hero.webm" type="video/webm" />
				</video>
			</div>
		</section>

		<main class="main-content">
			<!-- Content Section -->
			<div class="content-grid">
				<div class="content-text">
					<p>Neuroship is here to advance human potential by pioneering the intersection of AI and neuroscience.</p>
					<p>Our interdisciplinary team of neuroscience experts and machine learning specialists has built powerful new AI models that accelerate understanding of the human mind at digital speed.</p>
					<p>Every day, and with each new breakthrough, we're getting closer to our ambitious mission to ensure no mind is left behind.</p>
				</div>
				<div class="news-section-inline">
					<div class="news-header">
						<div class="news-title">
							<span class="news-eyebrow">
								<span class="char" style="animation-delay: 0.1s">L</span>
								<span class="char" style="animation-delay: 0.12s">a</span>
								<span class="char" style="animation-delay: 0.14s">t</span>
								<span class="char" style="animation-delay: 0.16s">e</span>
								<span class="char" style="animation-delay: 0.18s">s</span>
								<span class="char" style="animation-delay: 0.2s">t</span>
								<span class="char" style="animation-delay: 0.24s; margin-left: 0.3em">f</span>
								<span class="char" style="animation-delay: 0.26s">r</span>
								<span class="char" style="animation-delay: 0.28s">o</span>
								<span class="char" style="animation-delay: 0.3s">m</span>
								<span class="char" style="animation-delay: 0.34s; margin-left: 0.3em">N</span>
								<span class="char" style="animation-delay: 0.36s">e</span>
								<span class="char" style="animation-delay: 0.38s">u</span>
								<span class="char" style="animation-delay: 0.4s">r</span>
								<span class="char" style="animation-delay: 0.42s">o</span>
								<span class="char" style="animation-delay: 0.44s">s</span>
								<span class="char" style="animation-delay: 0.46s">h</span>
								<span class="char" style="animation-delay: 0.48s">i</span>
								<span class="char" style="animation-delay: 0.5s">p</span>
							</span>
						</div>
						<a href="/blog" class="arrow-link">
							View All
							<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M5 12h14M12 5l7 7-7 7"/>
							</svg>
						</a>
					</div>
					<ul class="news-list">
						<li class="news-item">
							<a href="/blog/ai-era-new-rules" class="news-link">The AI Era: When Old Rules No Longer Apply</a>
						</li>
					</ul>
				</div>
			</div>
		</main>

		<Footer />

		<!-- Intersection Observer for scroll animations -->
		<script is:inline>
			// Add animation on scroll
			document.addEventListener('DOMContentLoaded', () => {
				const observer = new IntersectionObserver((entries) => {
					entries.forEach(entry => {
						if (entry.isIntersecting) {
							entry.target.style.animationPlayState = 'running';
						}
					});
				}, { threshold: 0.1 });

				document.querySelectorAll('.content-text, .news-section-inline').forEach(el => {
					el.style.animationPlayState = 'paused';
					observer.observe(el);
				});
			});
		</script>
	</body>
</html>
