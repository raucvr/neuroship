---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, COMPANY, GOALS, LOGOS } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			/* Hero Section - Isomorphic Labs style */
			.hero {
				min-height: 100vh;
				display: flex;
				flex-direction: column;
				justify-content: center;
				padding: 8rem 2rem 4rem;
			}

			.hero-content {
				max-width: 1400px;
				margin: 0 auto;
				width: 100%;
			}

			.hero-title {
				font-size: clamp(2.5rem, 5vw, 3.5rem);
				font-weight: 200;
				line-height: 1.2;
				letter-spacing: -0.03em;
				margin-bottom: 2rem;
				max-width: 600px;
			}

			.hero-description {
				font-size: 0.875rem;
				line-height: 1.4;
				color: var(--text-primary);
				max-width: 600px;
				margin-bottom: 0;
				font-weight: 300;
			}

			/* Main Content */
			.main-content {
				max-width: 1400px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			/* Content Grid */
			.content-grid {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 4rem;
				padding: 4rem 0;
				border-top: 1px solid var(--border-color);
			}

			.content-text p {
				font-size: 0.875rem;
				line-height: 1.4;
				margin-bottom: 1rem;
			}

			/* News Section */
			.news-section {
				padding: 4rem 0;
				border-top: 1px solid var(--border-color);
			}

			.news-header {
				display: flex;
				justify-content: space-between;
				align-items: center;
				margin-bottom: 2rem;
			}

			.news-title {
				display: flex;
				align-items: center;
				gap: 0.5rem;
			}

			.news-eyebrow {
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.0625rem;
				text-transform: uppercase;
			}

			.news-list {
				list-style: none;
				padding: 0;
				margin: 0;
			}

			.news-item {
				padding: 1rem 0;
				border-bottom: 1px solid var(--border-color);
			}

			.news-item:first-child {
				padding-top: 0;
			}

			.news-link {
				font-size: 0.875rem;
				color: var(--text-primary);
				text-decoration: none;
				transition: color 0.3s ease;
			}

			.news-link:hover {
				color: var(--text-muted);
			}

			/* Goals Section */
			.goals-section {
				padding: 6rem 0;
				border-top: 1px solid var(--border-color);
			}

			.goals-header {
				display: flex;
				justify-content: space-between;
				align-items: flex-start;
				margin-bottom: 3rem;
			}

			.goals-intro {
				max-width: 600px;
			}

			.goals-eyebrow {
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.0625rem;
				text-transform: uppercase;
				margin-bottom: 1rem;
			}

			.goals-title {
				font-size: clamp(1.5rem, 3vw, 2.25rem);
				font-weight: 200;
				margin-bottom: 0;
			}

			/* Cards Grid */
			.cards-grid {
				display: grid;
				grid-template-columns: repeat(3, 1fr);
				gap: 1px;
				background: var(--border-color);
				border: 1px solid var(--border-color);
			}

			.goal-card {
				background: var(--bg-primary);
				padding: 2rem;
				display: flex;
				flex-direction: column;
			}

			.card-eyebrow {
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.0625rem;
				text-transform: uppercase;
				margin-bottom: 1rem;
			}

			.card-title {
				font-size: 1.375rem;
				font-weight: 300;
				margin-bottom: 1rem;
				flex: 1;
			}

			.card-link {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				font-size: 1rem;
				color: var(--text-secondary);
				text-decoration: none;
				margin-top: auto;
			}

			.card-link svg {
				width: 14px;
				height: 14px;
				transition: transform 0.3s ease;
			}

			.card-link:hover {
				color: var(--text-muted);
			}

			.card-link:hover svg {
				transform: translateX(4px);
			}

			/* Vision Section */
			.vision-section {
				padding: 6rem 0;
				border-top: 1px solid var(--border-color);
			}

			.vision-grid {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 4rem;
			}

			.vision-text {
				max-width: 500px;
			}

			.vision-eyebrow {
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.0625rem;
				text-transform: uppercase;
				margin-bottom: 1rem;
			}

			.vision-statement {
				font-size: 0.875rem;
				line-height: 1.4;
				margin-bottom: 2rem;
			}

			.vision-image {
				display: flex;
				align-items: center;
				justify-content: center;
			}

			.vision-image img {
				max-width: 100%;
				height: auto;
			}

			/* Quote Section */
			.quote-section {
				padding: 6rem 0;
				border-top: 1px solid var(--border-color);
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 4rem;
				align-items: center;
			}

			.quote-text {
				font-size: clamp(1.25rem, 2vw, 1.5rem);
				font-weight: 300;
				line-height: 1.4;
				margin-bottom: 2rem;
			}

			.quote-author {
				margin-top: 1.5rem;
			}

			.author-name {
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.0625rem;
				text-transform: uppercase;
				margin-bottom: 0.25rem;
			}

			.author-title {
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.0625rem;
				text-transform: uppercase;
				color: var(--text-muted);
			}

			/* Latest Section */
			.latest-section {
				padding: 6rem 0;
				border-top: 1px solid var(--border-color);
			}

			.latest-eyebrow {
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.0625rem;
				text-transform: uppercase;
				margin-bottom: 2rem;
			}

			.latest-grid {
				display: grid;
				grid-template-columns: repeat(3, 1fr);
				gap: 2rem;
			}

			.latest-card {
				display: block;
				text-decoration: none;
				color: var(--text-primary);
			}

			.latest-tag {
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.0625rem;
				text-transform: uppercase;
				color: var(--text-muted);
				margin-bottom: 0.5rem;
			}

			.latest-title {
				font-size: 1.375rem;
				font-weight: 300;
				line-height: 1.3;
			}

			.latest-card:hover .latest-title {
				color: var(--text-muted);
			}

			.latest-footer {
				margin-top: 2rem;
			}

			/* Responsive */
			@media (max-width: 1024px) {
				.cards-grid {
					grid-template-columns: 1fr;
				}

				.latest-grid {
					grid-template-columns: 1fr;
					gap: 1.5rem;
				}
			}

			@media (max-width: 768px) {
				.hero {
					padding: 6rem 1rem 3rem;
					min-height: auto;
				}

				.hero-title {
					font-size: 2rem;
				}

				.main-content {
					padding: 0 1rem;
				}

				.content-grid,
				.vision-grid,
				.quote-section {
					grid-template-columns: 1fr;
					gap: 2rem;
				}

				.goals-section,
				.vision-section,
				.quote-section,
				.latest-section {
					padding: 3rem 0;
				}

				.goals-header {
					flex-direction: column;
					gap: 1rem;
				}

				.goal-card {
					padding: 1.5rem;
				}

				.quote-image {
					order: -1;
				}

				.news-header {
					flex-direction: column;
					align-items: flex-start;
					gap: 1rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		
		<!-- Hero Section -->
		<section class="hero">
			<div class="hero-content">
				<h1 class="hero-title">
					Decoding<br/>
					the rhythms<br/>
					of life
				</h1>
				<p class="hero-description">
					We're entering a new era of neuroscience — one where AI can unlock deeper understanding of the mind, faster breakthroughs, and life-changing therapies. At Neuroship, we're building that future.
				</p>
			</div>
		</section>

		<main class="main-content">
			<!-- Content Section -->
			<div class="content-grid">
				<div class="content-text">
					<p>Neuroship is here to advance human potential by pioneering the intersection of AI and neuroscience.</p>
					<p>Our interdisciplinary team of neuroscience experts and machine learning specialists has built powerful new AI models that accelerate understanding of the human mind at digital speed.</p>
					<p>Every day, and with each new breakthrough, we're getting closer to our ambitious mission to ensure no mind is left behind.</p>
				</div>
				<div class="news-section-inline">
					<div class="news-header">
						<div class="news-title">
							<span class="news-eyebrow">Latest from Neuroship</span>
						</div>
						<a href="/blog" class="arrow-link">
							View All
							<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M5 12h14M12 5l7 7-7 7"/>
							</svg>
						</a>
					</div>
					<ul class="news-list">
						<li class="news-item">
							<a href="/blog/ai-era-new-rules" class="news-link">The AI Era: When Old Rules No Longer Apply</a>
						</li>
					</ul>
				</div>
			</div>

			<!-- Goals Section -->
			<section class="goals-section">
				<div class="goals-header">
					<div class="goals-intro">
						<span class="goals-eyebrow">Our Goal</span>
						<h2 class="goals-title">We're using AI to transform understanding of the human mind.</h2>
					</div>
					<a href="/about" class="arrow-link">
						Learn More
						<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M5 12h14M12 5l7 7-7 7"/>
						</svg>
					</a>
				</div>

				<div class="cards-grid">
					<div class="goal-card">
						<span class="card-eyebrow">Phase 1 · Short-term</span>
						<h3 class="card-title">{GOALS.shortTerm.title}</h3>
						<a href="/about" class="card-link">
							Learn More
							<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M5 12h14M12 5l7 7-7 7"/>
							</svg>
						</a>
					</div>
					<div class="goal-card">
						<span class="card-eyebrow">Phase 2 · Mid-term</span>
						<h3 class="card-title">{GOALS.midTerm.title}</h3>
						<a href="/about" class="card-link">
							Learn More
							<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M5 12h14M12 5l7 7-7 7"/>
							</svg>
						</a>
					</div>
					<div class="goal-card">
						<span class="card-eyebrow">Phase 3 · Long-term</span>
						<h3 class="card-title">{GOALS.longTerm.title}</h3>
						<a href="/about" class="card-link">
							Learn More
							<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M5 12h14M12 5l7 7-7 7"/>
							</svg>
						</a>
					</div>
				</div>
			</section>

			<!-- Vision Section -->
			<section class="vision-section">
				<div class="vision-grid">
					<div class="vision-text">
						<span class="vision-eyebrow">Neuroship</span>
						<p class="vision-statement">
							Our name embodies our belief in the power of technology to navigate the complexities of the human mind. By harnessing AI's powerful capabilities, we can model neural patterns, anticipate behavioral outcomes, and develop innovative therapies to help those with neurological differences thrive.
						</p>
						<a href="/about" class="arrow-link">
							About Us
							<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M5 12h14M12 5l7 7-7 7"/>
							</svg>
						</a>
					</div>
					<div class="vision-image">
						<img src={LOGOS.full} alt="Neuroship" style="max-width: 400px;" />
					</div>
				</div>
			</section>

			<!-- Quote Section -->
			<section class="quote-section">
				<div class="quote-content">
					<p class="quote-text">
						"I believe there is no more important application for AI than ensuring no mind is left behind and granting every life the freedom to reach the future."
					</p>
					<div class="quote-author">
						<p class="author-name">Takayuki Ishii</p>
						<p class="author-title">Founder</p>
					</div>
				</div>
				<div class="quote-image">
					<!-- Placeholder for founder image -->
				</div>
			</section>

			<!-- Latest Section -->
			<section class="latest-section">
				<span class="latest-eyebrow">Latest from Neuroship</span>
				<div class="latest-grid">
					<a href="/blog/ai-era-new-rules" class="latest-card">
						<span class="latest-tag">Insights</span>
						<h3 class="latest-title">The AI Era: When Old Rules No Longer Apply</h3>
					</a>
				</div>
				<div class="latest-footer">
					<a href="/blog" class="arrow-link">
						More Updates
						<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M5 12h14M12 5l7 7-7 7"/>
						</svg>
					</a>
				</div>
			</section>
		</main>

		<Footer />
	</body>
</html>
