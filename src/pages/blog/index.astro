---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Blog - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			/* Page Header */
			.page-header {
				padding: 8rem 2rem 4rem;
				max-width: 1400px;
				margin: 0 auto;
			}

			.page-title {
				font-size: clamp(2.5rem, 5vw, 3.5rem);
				font-weight: 200;
				line-height: 1.2;
				letter-spacing: -0.03em;
				margin-bottom: 1rem;
			}

			.page-description {
				font-size: 0.875rem;
				line-height: 1.4;
				color: var(--text-muted);
				max-width: 500px;
				font-weight: 300;
			}

			/* Blog Section */
			.blog-section {
				max-width: 1400px;
				margin: 0 auto;
				padding: 0 2rem 6rem;
			}

			.blog-list {
				list-style: none;
				padding: 0;
				margin: 0;
				border-top: 1px solid var(--border-color);
			}

			.blog-item {
				border-bottom: 1px solid var(--border-color);
				padding: 2rem 0;
			}

			.blog-link {
				display: grid;
				grid-template-columns: 120px 1fr;
				gap: 3rem;
				text-decoration: none;
				color: inherit;
			}

			.blog-link:hover .blog-title {
				color: var(--text-muted);
			}

			.blog-meta {
				display: flex;
				flex-direction: column;
				gap: 0.5rem;
			}

			.blog-date {
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.05em;
				text-transform: uppercase;
				color: var(--text-muted);
			}

			.blog-tag {
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.05em;
				text-transform: uppercase;
				color: var(--text-muted);
			}

			.blog-content {
				display: flex;
				flex-direction: column;
				gap: 0.5rem;
			}

			.blog-title {
				font-size: 1.375rem;
				font-weight: 300;
				margin: 0;
				color: var(--text-primary);
				transition: color 0.3s ease;
				line-height: 1.3;
			}

			.blog-description {
				font-size: 0.875rem;
				color: var(--text-muted);
				margin: 0;
				line-height: 1.4;
				max-width: 600px;
			}

			/* Empty State */
			.empty-state {
				text-align: center;
				padding: 4rem 2rem;
				border-top: 1px solid var(--border-color);
			}

			.empty-state h3 {
				font-size: 1.5rem;
				font-weight: 300;
				margin-bottom: 1rem;
			}

			.empty-state p {
				color: var(--text-muted);
				font-size: 0.875rem;
			}

			@media (max-width: 768px) {
				.page-header {
					padding: 6rem 1rem 3rem;
				}

				.blog-section {
					padding: 0 1rem 4rem;
				}

				.blog-link {
					grid-template-columns: 1fr;
					gap: 0.5rem;
				}

				.blog-meta {
					flex-direction: row;
					gap: 1rem;
				}

				.blog-title {
					font-size: 1.125rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		
		<!-- Page Header -->
		<header class="page-header">
			<h1 class="page-title">Insights</h1>
			<p class="page-description">Thoughts on neuroscience, AI, and the future of human potential.</p>
		</header>

		<!-- Blog List -->
		<section class="blog-section">
			{posts.length > 0 ? (
				<ul class="blog-list">
					{posts.map((post) => (
						<li class="blog-item">
							<a href={`/blog/${post.id}/`} class="blog-link">
								<div class="blog-meta">
									<span class="blog-date">
										<FormattedDate date={post.data.pubDate} />
									</span>
									{post.data.author && (
										<span class="blog-tag">{post.data.author}</span>
									)}
								</div>
								<div class="blog-content">
									<h2 class="blog-title">{post.data.title}</h2>
									{post.data.description && (
										<p class="blog-description">{post.data.description}</p>
									)}
								</div>
							</a>
						</li>
					))}
				</ul>
			) : (
				<div class="empty-state">
					<h3>Coming Soon</h3>
					<p>We're working on some exciting content. Check back soon!</p>
				</div>
			)}
		</section>

		<Footer />
	</body>
</html>
