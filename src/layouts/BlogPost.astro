---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			/* Thinking Machines exact style - serif font, precise spacing */
			.article-header {
				max-width: 660px;
				margin: 0 auto;
				padding: 8rem 2rem 0;
				text-align: center;
			}

			.back-link {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				font-size: 0.875rem;
				color: var(--text-muted);
				text-decoration: none;
				margin-bottom: 2.5rem;
				transition: color 0.3s ease;
			}

			.back-link:hover {
				color: var(--text-primary);
			}

			.back-link svg {
				width: 14px;
				height: 14px;
			}

			.article-title {
				font-family: Georgia, 'Times New Roman', serif;
				font-size: 1.875rem; /* 30px */
				font-weight: 600;
				line-height: 1.4;
				letter-spacing: -0.01em;
				margin-bottom: 1rem;
				color: var(--text-primary);
			}

			.article-meta {
				display: flex;
				align-items: center;
				justify-content: center;
				gap: 2rem;
				margin-top: 1rem;
				margin-bottom: 2rem;
			}

			.article-author {
				font-size: 0.9375rem; /* 15px */
				font-weight: 400;
				color: var(--text-primary);
			}

			.article-date {
				font-size: 0.9375rem; /* 15px */
				font-weight: 400;
				color: var(--text-muted);
			}

			.hero-image {
				max-width: 800px;
				margin: 0 auto;
				padding: 0 2rem 2rem;
			}

			.hero-image img {
				display: block;
				width: 100%;
				height: auto;
			}

			.article-content {
				max-width: 660px;
				margin: 0 auto;
				padding: 0 2rem 4rem;
			}

			.article-content h2 {
				font-family: Georgia, 'Times New Roman', serif;
				font-size: 1.45rem; /* ~23px */
				font-weight: 600;
				line-height: 1.4;
				margin-top: 2.5rem;
				margin-bottom: 1rem;
				color: var(--text-primary);
			}

			.article-content h3 {
				font-family: Georgia, 'Times New Roman', serif;
				font-size: 1.25rem;
				font-weight: 600;
				line-height: 1.4;
				margin-top: 2rem;
				margin-bottom: 0.75rem;
				color: var(--text-primary);
			}

			.article-content p {
				font-size: 1.0625rem; /* 17px */
				line-height: 1.65;
				margin-bottom: 1.33rem; /* ~21px */
				color: rgb(40, 40, 40);
			}

			.article-content a {
				color: var(--text-primary);
				text-decoration: underline;
				text-underline-offset: 2px;
			}

			.article-content a:hover {
				color: var(--text-muted);
			}

			.article-content ul,
			.article-content ol {
				margin-bottom: 1.33rem;
				padding-left: 1.5rem;
			}

			.article-content li {
				font-size: 0.9rem; /* 14.4px */
				line-height: 1.4;
				margin-bottom: 0.35rem; /* ~5.6px */
				color: rgb(40, 40, 40);
			}

			.article-content blockquote {
				font-size: 1.0625rem;
				font-style: italic;
				border-left: 2px solid var(--gray-300);
				padding-left: 1.25rem;
				margin: 1.5rem 0;
				color: var(--text-muted);
			}

			.article-content pre {
				background: var(--gray-100);
				border-radius: 6px;
				padding: 1.25rem;
				overflow-x: auto;
				margin: 1.5rem 0;
				font-size: 0.875rem;
			}

			.article-content code {
				font-family: 'SF Mono', 'Monaco', 'Inconsolata', monospace;
				font-size: 0.875rem;
			}

			.article-content hr {
				border: none;
				border-top: 1px solid var(--border-color);
				margin: 2.5rem 0;
			}

			.article-content img {
				max-width: 100%;
				height: auto;
				margin: 1.5rem 0;
			}

			.article-content strong {
				font-weight: 600;
				color: var(--text-primary);
			}

			.article-content em {
				font-style: italic;
			}

			.updated-date {
				font-size: 0.875rem;
				color: var(--text-muted);
				font-style: italic;
				text-align: center;
				margin-top: 0.5rem;
			}

			@media (max-width: 768px) {
				.article-header {
					padding: 6rem 1.25rem 0;
				}

				.hero-image {
					padding: 0 1.25rem 1.5rem;
				}

				.article-content {
					padding: 0 1.25rem 3rem;
				}

				.article-title {
					font-size: 1.5rem;
				}

				.article-content h2 {
					font-size: 1.25rem;
					margin-top: 2rem;
				}

				.article-content p {
					font-size: 1rem;
				}

				.article-meta {
					gap: 1rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<header class="article-header">
					<a href="/blog" class="back-link">
						<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M19 12H5M12 19l-7-7 7-7"/>
						</svg>
						Back to Blog
					</a>
					<h1 class="article-title">{title}</h1>
					<div class="article-meta">
						<span class="article-author">Neuroship Team</span>
						<span class="article-date">
							<FormattedDate date={pubDate} />
						</span>
					</div>
					{updatedDate && (
						<p class="updated-date">
							Last updated on <FormattedDate date={updatedDate} />
						</p>
					)}
				</header>
				
				{heroImage && (
					<div class="hero-image">
						<img src={heroImage} alt="" />
					</div>
				)}
				
				<div class="article-content">
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
