---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			/* Thinking Machines exact style with TOC sidebar */
			main {
				max-width: 990px;
				margin: 0 auto;
				padding: 0 1rem;
			}

			.article-header {
				max-width: 660px;
				margin: 0 auto;
				padding: 8rem 0 2rem;
				text-align: center;
			}

			.back-link {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				font-size: 0.875rem;
				color: var(--text-muted);
				text-decoration: none;
				margin-bottom: 2rem;
				transition: color 0.3s ease;
			}

			.back-link:hover {
				color: var(--text-primary);
			}

			.back-link svg {
				width: 14px;
				height: 14px;
			}

			.article-title {
				font-family: Georgia, 'Times New Roman', serif;
				font-size: 1.875rem; /* 30px */
				font-weight: 600;
				line-height: 1.4;
				letter-spacing: -0.01em;
				margin-bottom: 1rem;
				color: var(--text-primary);
			}

			.article-meta {
				display: flex;
				align-items: center;
				justify-content: center;
				gap: 2rem;
				margin-top: 1rem;
				margin-bottom: 0;
			}

			.article-author {
				font-size: 0.9375rem; /* 15px */
				font-weight: 400;
				color: var(--text-primary);
			}

			.article-date {
				font-size: 0.9375rem; /* 15px */
				font-weight: 400;
				color: var(--text-muted);
			}

			.hero-image {
				max-width: 800px;
				margin: 0 auto;
				padding: 0 0 2rem;
			}

			.hero-image img {
				display: block;
				width: 100%;
				height: auto;
			}

			/* Two-column layout: TOC + Content */
			.article-body {
				position: relative;
				display: flex;
				gap: 2rem;
				padding-top: 0.5rem;
			}

			/* Table of Contents - Thinking Machines exact style */
			.toc {
				width: 220px;
				flex-shrink: 0;
				position: sticky;
				top: 100px;
				align-self: flex-start;
			}

			/* Article content - Right side */
			.article-content {
				flex: 1;
				max-width: 660px;
				padding-bottom: 4rem;
			}

			.article-content h2 {
				font-family: Georgia, 'Times New Roman', serif !important;
				font-size: 1.1rem !important; /* ~17.6px - closer to body text */
				font-weight: 700 !important;
				line-height: 1.4 !important;
				margin-top: 1.5rem !important;
				margin-bottom: 0.75rem !important;
				color: rgb(40, 40, 40) !important;
				scroll-margin-top: 100px;
				letter-spacing: normal !important;
			}

			.article-content h3 {
				font-family: Georgia, 'Times New Roman', serif;
				font-size: 1.125rem; /* 18px */
				font-weight: 600;
				line-height: 1.4;
				margin-top: 0.8rem;
				margin-bottom: 0.75rem;
				color: rgb(40, 40, 40);
			}

			.article-content p {
				font-size: 1.0625rem; /* 17px */
				line-height: 1.65;
				margin-bottom: 1.33rem; /* ~21px */
				color: rgb(40, 40, 40);
			}

			.article-content a {
				color: var(--text-primary);
				text-decoration: underline;
				text-underline-offset: 2px;
			}

			.article-content a:hover {
				color: var(--text-muted);
			}

			.article-content ul,
			.article-content ol {
				margin-bottom: 1.33rem;
				padding-left: 1.5rem;
			}

			.article-content li {
				font-size: 0.9rem; /* 14.4px */
				line-height: 1.4;
				margin-bottom: 0.35rem; /* ~5.6px */
				color: rgb(40, 40, 40);
			}

			.article-content blockquote {
				font-size: 1.0625rem;
				font-style: italic;
				border-left: 2px solid var(--gray-300);
				padding-left: 1.25rem;
				margin: 1.5rem 0;
				color: var(--text-muted);
			}

			.article-content pre {
				background: var(--gray-100);
				border-radius: 6px;
				padding: 1.25rem;
				overflow-x: auto;
				margin: 1.5rem 0;
				font-size: 0.875rem;
			}

			.article-content code {
				font-family: 'SF Mono', 'Monaco', 'Inconsolata', monospace;
				font-size: 0.875rem;
			}

			.article-content hr {
				border: none;
				border-top: 1px solid var(--border-color);
				margin: 2.5rem 0;
			}

			.article-content img {
				max-width: 100%;
				height: auto;
				margin: 1.5rem 0;
			}

			.article-content strong {
				font-weight: 600;
				color: var(--text-primary);
			}

			.article-content em {
				font-style: italic;
			}

			.updated-date {
				font-size: 0.875rem;
				color: var(--text-muted);
				font-style: italic;
				text-align: center;
				margin-top: 0.5rem;
			}

			/* Footer navigation */
			.article-footer {
				display: flex;
				justify-content: space-between;
				align-items: center;
				max-width: 660px;
				margin: 0 auto;
				padding: 2rem 0;
				border-top: 1px solid var(--border-color);
			}

			.footer-link {
				font-size: 0.875rem;
				color: var(--text-muted);
				text-decoration: none;
				transition: color 0.2s ease;
			}

			.footer-link:hover {
				color: var(--text-primary);
			}

			@media (max-width: 1024px) {
				.toc {
					display: none;
				}

				.article-body {
					justify-content: center;
				}

				.article-content {
					padding: 0 1rem 3rem;
				}
			}

			@media (max-width: 768px) {
				.article-header {
					padding: 6rem 1rem 1.5rem;
				}

				.article-title {
					font-size: 1.5rem;
				}

				.article-content h2 {
					font-size: 1rem;
					margin-top: 1.25rem;
				}

				.article-content p {
					font-size: 1rem;
				}

				.article-meta {
					gap: 1rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<header class="article-header">
					<a href="/blog" class="back-link">
						<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M19 12H5M12 19l-7-7 7-7"/>
						</svg>
						Back to Blog
					</a>
					<h1 class="article-title">{title}</h1>
					<div class="article-meta">
						<span class="article-author">Neuroship Team</span>
						<span class="article-date">
							<FormattedDate date={pubDate} />
						</span>
					</div>
					{updatedDate && (
						<p class="updated-date">
							Last updated on <FormattedDate date={updatedDate} />
						</p>
					)}
				</header>
				
				{heroImage && (
					<div class="hero-image">
						<img src={heroImage} alt="" />
					</div>
				)}
				
				<div class="article-body">
					<!-- Table of Contents - Generated by JavaScript -->
					<nav class="toc" aria-label="Table of contents">
						<ul class="toc-list" id="toc-list">
							<!-- TOC items will be generated by JS -->
						</ul>
					</nav>
					
					<div class="article-content" id="article-content">
						<slot />
					</div>
				</div>

				<footer class="article-footer">
					<a href="/blog" class="footer-link">← Back to Blog</a>
					<a href="#" class="footer-link" id="back-to-top">Back to top ↑</a>
				</footer>
			</article>
		</main>
		<Footer />

		<script is:inline>
			// Generate Table of Contents from h2 headings
			document.addEventListener('DOMContentLoaded', () => {
				const content = document.getElementById('article-content');
				const tocList = document.getElementById('toc-list');
				const headings = content.querySelectorAll('h2');

				headings.forEach((heading, index) => {
					// Create ID for heading if not exists
					if (!heading.id) {
						heading.id = `section-${index + 1}`;
					}

					// Create TOC item
					const li = document.createElement('li');
					li.className = 'toc-item';
					
					const a = document.createElement('a');
					a.className = 'toc-link';
					a.href = `#${heading.id}`;
					a.textContent = heading.textContent;
					
					li.appendChild(a);
					tocList.appendChild(li);
				});

				// Highlight active TOC item on scroll
				const tocLinks = document.querySelectorAll('.toc-link');
				
				const observer = new IntersectionObserver((entries) => {
					entries.forEach(entry => {
						if (entry.isIntersecting) {
							tocLinks.forEach(link => link.classList.remove('active'));
							const activeLink = document.querySelector(`.toc-link[href="#${entry.target.id}"]`);
							if (activeLink) activeLink.classList.add('active');
						}
					});
				}, { rootMargin: '-100px 0px -66%' });

				headings.forEach(heading => observer.observe(heading));

				// Back to top
				document.getElementById('back-to-top')?.addEventListener('click', (e) => {
					e.preventDefault();
					window.scrollTo({ top: 0, behavior: 'smooth' });
				});
			});
		</script>
	</body>
</html>
