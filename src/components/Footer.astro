---
import { COMPANY, SOCIAL_LINKS, LOGOS } from '../consts';
const today = new Date();
---

<footer>
	<div class="footer-container">
		<div class="footer-grid">
			<!-- Copyright Column -->
			<div class="footer-col footer-copyright">
				<span>Â© {today.getFullYear()} NEUROSHIP</span>
			</div>

			<!-- Navigation Column -->
			<div class="footer-col">
				<a href="/">Home</a>
				<a href="/about">About</a>
				<a href="/blog">Blog</a>
			</div>

			<!-- Contact Column -->
			<div class="footer-col">
				<span class="footer-label">CONTACT US</span>
				<a href={`mailto:${COMPANY.email}`}>{COMPANY.email}</a>
			</div>

			<!-- Social/Info Column -->
			<div class="footer-col">
				<span class="footer-label">CONNECT</span>
				<a href={SOCIAL_LINKS.github} target="_blank">GitHub</a>
				<a href={SOCIAL_LINKS.twitter} target="_blank">Twitter</a>
				<a href={SOCIAL_LINKS.linkedin} target="_blank">LinkedIn</a>
			</div>
		</div>
	</div>
</footer>

<style>
	footer {
		background: var(--bg-primary);
		border-top: 1px solid var(--border-color);
		padding: 3rem 0;
		margin-top: auto;
	}

	.footer-container {
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.footer-grid {
		display: grid;
		grid-template-columns: 1fr 1fr 1fr 1fr;
		gap: 2rem;
	}

	.footer-col {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.footer-copyright {
		font-size: 0.75rem;
		font-weight: 400;
		letter-spacing: 0.05em;
		color: var(--text-primary);
	}

	.footer-label {
		font-size: 0.75rem;
		font-weight: 400;
		letter-spacing: 0.05em;
		color: var(--text-primary);
		margin-bottom: 0.5rem;
	}

	.footer-col a {
		font-size: 0.875rem;
		font-weight: 300;
		color: var(--text-muted);
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.footer-col a:hover {
		color: var(--text-primary);
	}

	@media (max-width: 768px) {
		footer {
			padding: 2rem 0;
		}

		.footer-container {
			padding: 0 1rem;
		}

		.footer-grid {
			grid-template-columns: 1fr 1fr;
			gap: 2rem;
		}

		.footer-copyright {
			grid-column: 1 / -1;
			text-align: center;
			order: 4;
			padding-top: 1rem;
			border-top: 1px solid var(--border-color);
		}
	}

	@media (max-width: 480px) {
		.footer-grid {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.footer-col {
			align-items: center;
		}
	}
</style>
