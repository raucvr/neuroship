---
import { COMPANY, SOCIAL_LINKS, LOGOS } from '../consts';
const today = new Date();
---

<footer>
	<div class="footer-container">
		<div class="footer-grid">
			<!-- Brand Column -->
			<div class="footer-brand">
				<a href="/" class="footer-logo">
					<img src={LOGOS.icon} alt="Neuroship" class="logo-icon" />
					<span>{COMPANY.name}</span>
				</a>
				<p class="footer-tagline">{COMPANY.tagline}</p>
				<p class="footer-slogan">ai*behavior</p>
				<div class="social-links">
					<a href={SOCIAL_LINKS.github} target="_blank" aria-label="GitHub">
						<svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
